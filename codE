                rating: 4.6,
                plays: "13.5K",
                category: "rpg",
                url: "games/wizards-academy/index.html",
                colorClass: "game3"
            },
            // ADD MORE GAMES HERE - Just copy this format:
            /*
            {
                id: 10,
                name: "Your Game Name",
                description: "Your game description here.",
                icon: "üéÆ", // Any emoji
                rating: 4.5,
                plays: "1.2K",
                category: "action", // action, puzzle, adventure, simulation, racing, creative, music, rpg
                url: "games/your-game/index.html",
                colorClass: "game4" // game1, game2, game3, game4, game5, or game6
            },
            */
        ];

        // Game display variables
        let currentGames = [];
        let displayedGames = [];
        const gamesPerLoad = 12;
        let currentIndex = 0;

        // Create game card HTML
        function createGameCard(game) {
            return `
                <div class="game-card ${game.colorClass}" data-game-id="${game.id}">
                    <div class="game-thumbnail">${game.icon}</div>
                    <div class="play-button">‚ñ∂Ô∏è</div>
                    <div class="game-info">
                        <h4 class="game-name">${game.name}</h4>
                        <p class="game-description">${game.description}</p>
                        <div class="game-stats">
                            <span>‚≠ê ${game.rating}/5</span>
                            <span>üéÆ ${game.plays} plays</span>
                        </div>
                    </div>
                </div>
            `;
        }

        // Filter and search games
        function filterGames() {
            const searchTerm = document.getElementById('gameSearch').value.toLowerCase();
            const category = document.getElementById('categoryFilter').value;

            currentGames = gamesDatabase.filter(game => {
                const matchesSearch = game.name.toLowerCase().includes(searchTerm) || 
                                    game.description.toLowerCase().includes(searchTerm);
                const matchesCategory = !category || game.category === category;
                
                return matchesSearch && matchesCategory;
            });

            currentIndex = 0;
            displayedGames = [];
            updateGamesDisplay();
        }

        // Update games display
        function updateGamesDisplay() {
            const gamesGrid = document.getElementById('gamesGrid');
            const loadMoreBtn = document.getElementById('loadMoreBtn');
            const noGamesMessage = document.getElementById('noGamesMessage');
            const gamesCount = document.getElementById('gamesCount');

            // Update games count
            gamesCount.textContent = `Showing ${displayedGames.length} of ${currentGames.length} games`;

            if (currentGames.length === 0) {
                gamesGrid.innerHTML = '';
                loadMoreBtn.style.display = 'none';
                noGamesMessage.style.display = 'block';
                return;
            }

            noGamesMessage.style.display = 'none';

            // Load more games
            const gamesToLoad = currentGames.slice(currentIndex, currentIndex + gamesPerLoad);
            displayedGames.push(...gamesToLoad);
            currentIndex += gamesPerLoad;

            // Render all displayed games
            gamesGrid.innerHTML = displayedGames.map(game => createGameCard(game)).join('');

            // Show/hide load more button
            if (currentIndex >= currentGames.length) {
                loadMoreBtn.style.display = 'none';
            } else {
                loadMoreBtn.style.display = 'block';
            }

            // Add click events to new game cards
            addGameClickEvents();
        }

        // Add click events to game cards
        function addGameClickEvents() {
            document.querySelectorAll('.game-card').forEach(card => {
                card.addEventListener('click', function() {
                    // Add click animation
                    this.style.transform = 'scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                    
                    // Get game data
                    const gameId = parseInt(this.dataset.gameId);
                    const game = gamesDatabase.find(g => g.id === gameId);
                    
                    if (game && game.url) {
                        // Launch game in new tab
                        window.open(game.url, '_blank');
                    } else {
                        // Fallback message
                        alert('Game coming soon! Submit your own games to play.');
                    }
                });
            });
        }

        // Initialize games system
        function initializeGames() {
            currentGames = [...gamesDatabase];
            updateGamesDisplay();

            // Add search event listener
            document.getElementById('gameSearch').addEventListener('input', filterGames);
            
            // Add category filter event listener
            document.getElementById('categoryFilter').addEventListener('change', filterGames);
            
            // Add load more button event listener
            document.getElementById('loadMoreBtn').addEventListener('click', updateGamesDisplay);
        }

        // Generate floating particles
        function createParticles() {
            const particlesContainer = document.querySelector('.particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDuration = (Math.random() * 20 + 10) + 's';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Fade in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        // Observe all fade-in elements
        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Form button ripple effect
        document.querySelectorAll('.form-button, .cta-button').forEach(button => {
            button.addEventListener('click', function(e) {
                const ripple = document.createElement('div');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;
                
                ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    background: rgba(255,255,255,0.3);
                    border-radius: 50%;
                    left: ${x}px;
                    top: ${y}px;
                    transform: scale(0);
                    animation: ripple 0.6s ease-out;
                    pointer-events: none;
                `;
                
                this.style.position = 'relative';
                this.style.overflow = 'hidden';
                this.appendChild(ripple);
                
                setTimeout(() => ripple.remove(), 600);
            });
        });

        // Add ripple animation
        const rippleStyle = document.createElement('style');
        rippleStyle.textContent = `
            @keyframes ripple {
                to {
                    transform: scale(2);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(rippleStyle);

        // Initialize particles and games when page loads
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            initializeGames();
        });
    </script>
</body>
</html>FF
